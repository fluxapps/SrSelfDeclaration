{
  "name": "srag/librarylanguageinstaller",
  "description": "Install additional and external lang files for a plugin",
  "version": "1.1.4",
  "extra": {
    "ilias_plugin": {
      "ilias_min_version": "5.4.0",
      "ilias_max_version": "6.999"
    },
    "generate_plugin_readme_template": "ILIAS_LIBRARY",
    "long_description_template": "src/LONG_DESCRIPTION.md"
  },
  "type": "library",
  "keywords": [
    "ilias",
    "installer",
    "language",
    "library"
  ],
  "homepage": "https://github.com/fluxfw/LibraryLanguageInstaller",
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "studer + raimann ag - Team Custom 1",
      "email": "support-custom1@studer-raimann.ch",
      "homepage": "https://studer-raimann.ch",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.0",
    "srag/dic": ">=0.1.0"
  },
  "require-dev": {
    "srag/generateplugininfoshelper": ">=0.1.0"
  },
  "autoload": {
    "psr-4": {
      "srag\\LibraryLanguageInstaller\\SrSelfDeclaration\\": "src/"
    }
  },
  "config": {
    "classmap-authoritative": true,
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "generate-plugin-readme": [
      "srag\\GeneratePluginInfosHelper\\SrSelfDeclaration\\GeneratePluginReadme::generatePluginReadme"
    ],
    "update-version": [
      "srag\\GeneratePluginInfosHelper\\SrSelfDeclaration\\UpdateVersion::updateVersion"
    ]
  }
}
